<odoo>
    <record id="res_partner_inherit_form_view" model="ir.ui.view">
        <field name="name">res.partner.inherit.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Money Manager">
                    <group>
                        <field name="record_transaction_reminder"/>
                        <field name="report_notification"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
