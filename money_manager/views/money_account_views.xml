<odoo>
    <record model="ir.ui.view" id="money_account_tree_view">
        <field name="name">money.account.tree.view</field>
        <field name="model">money.account</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="money_account_action">
        <field name="name">Accounts</field>
        <field name="res_model">money.account</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
