<odoo>
    <data>
        <template id="income_report_document">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-bordered">
                        <tr>
                            <th width="25%" class="text-center">Account</th>
                            <th width="25%" class="text-center">Amount</th>
                            <th width="25%" class="text-center">Category</th>
                            <th width="25%" class="text-center">Date</th>
                        </tr>
                        <t t-foreach="o.get_income_data()" t-as="income">
                        <tr>
                            <td><p t-esc="income.account_id.name"/></td>
                            <td><p t-esc="income.amount"/></td>
                            <td><p t-esc="income.category_id.name"/></td>
                            <td><p t-esc="income.date"/></td>
                        </tr>
                        </t>
                    </table>
                </div>
            </t>
        </template>
        <template id="income_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="money_manager.income_report_document" t-lang="user.partner_id.lang"/>
                </t>
            </t>
        </template>
        <report
            id="action_print_income_report"
            string="Income Report"
            model="report.wizard"
            report_type="qweb-pdf"
            file="money_manager.income_report" 
            name="money_manager.income_report"
            print_report_name="'%s' %(object.partner_id.name)"
        />
    </data>
</odoo>
